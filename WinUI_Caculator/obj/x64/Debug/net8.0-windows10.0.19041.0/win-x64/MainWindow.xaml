<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WinUI_Caculator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUI_Caculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WinUI_Caculator">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <!-- 顯示區 -->
        <TextBox x:ConnectionId='2' Name="textNumber" Grid.Row="0" Grid.ColumnSpan="5" FontSize="36" Margin="0,0,0,10" TextAlignment="right" IsReadOnly="true"/>


        <!-- 按鍵 -->
        <Button x:ConnectionId='3' Name="Clear" Content="AC" Grid.Row="1" Grid.Column="0" Width="80" Height="80" FontSize="28" Margin="2,2,2,2"                       />
        <Button x:ConnectionId='4' Name="Seven" Content="7" Grid.Row="1" Grid.Column="1" Width="80" Height="80" FontSize="28" Margin="2,2,2,2"                       />
        <Button x:ConnectionId='5' Name="Eight" Content="8" Grid.Row="1" Grid.Column="2" Width="80" Height="80" FontSize="28" Margin="2,2,2,2"                       />
        <Button x:ConnectionId='6' Name="Nine" Content="9" Grid.Row="1" Grid.Column="3" Width="80" Height="80" FontSize="28" Margin="2,2,2,2"                      />
        <Button x:ConnectionId='7' Name="Divide" Content="/" Grid.Row="1" Grid.Column="4" Width="80" Height="80" FontSize="28" Margin="2,2,2,2"                        />

        <Button x:ConnectionId='8' Name="Four" Content="4" Grid.Row="2" Grid.Column="1" Width="80" Height="80" FontSize="28" Margin="2,2,2,2"                      />
        <Button x:ConnectionId='9' Name="Five" Content="5" Grid.Row="2" Grid.Column="2" Width="80" Height="80" FontSize="28" Margin="2,2,2,2"                      />
        <Button x:ConnectionId='10' Name="Six" Content="6" Grid.Row="2" Grid.Column="3" Width="80" Height="80" FontSize="28" Margin="2,2,2,2"                     />
        <Button x:ConnectionId='11' Name="Plus" Content="*" Grid.Row="2" Grid.Column="4" Width="80" Height="80" FontSize="28" Margin="2,2,2,2"                      />

        <Button x:ConnectionId='12' Name="One" Content="1" Grid.Row="3" Grid.Column="1" Width="80" Height="80" FontSize="28" Margin="2,2,2,2"                     />
        <Button x:ConnectionId='13' Name="Two" Content="2" Grid.Row="3" Grid.Column="2" Width="80" Height="80" FontSize="28" Margin="2,2,2,2"                     />
        <Button x:ConnectionId='14' Name="Three" Content="3" Grid.Row="3" Grid.Column="3" Width="80" Height="80" FontSize="28" Margin="2,2,2,2"                       />
        <Button x:ConnectionId='15' Name="Minus" Content="-" Grid.Row="3" Grid.Column="4" Width="80" Height="80" FontSize="28" Margin="2,2,2,2"                       />

        <Button x:ConnectionId='16' Name="Dot" Content="." Grid.Row="4" Grid.Column="1" Width="80" Height="80" FontSize="28" Margin="2,2,2,2"                     />
        <Button x:ConnectionId='17' Name="Zero" Content="0" Grid.Row="4" Grid.Column="2" Width="80" Height="80" FontSize="28" Margin="2,2,2,2"                      />
        <Button x:ConnectionId='18' Name="Equal" Content="=" Grid.Row="4" Grid.Column="3" Width="80" Height="80" FontSize="28" Margin="2,2,2,2"                       />
        <Button x:ConnectionId='19' Name="Add" Content="+" Grid.Row="4" Grid.Column="4" Width="80" Height="80" FontSize="28" Margin="2,2,2,2"                     />

        <TextBox x:ConnectionId='20' Name="textMessage" Grid.Row="5" Grid.ColumnSpan="5" FontSize="36" Margin="0,10,0,0" TextAlignment="left" IsReadOnly="true"/>

    </Grid>
</Window>

