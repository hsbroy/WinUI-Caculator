<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WinUI_Caculator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUI_Caculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WinUI_Caculator">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <!-- 顯示區 -->
        <TextBox Name="textNumber" Grid.Row="0" Grid.ColumnSpan="5" FontSize="36" Margin="0,0,0,10" TextAlignment="right" IsReadOnly="true"/>


        <!-- 按鍵 -->
        <Button Name="Clear" Content="AC" Grid.Row="1" Grid.Column="0" Width="80" Height="80" FontSize="28" Margin="2,2,2,2" Click="btnClear_Click"/>
        <Button Name="Seven" Content="7" Grid.Row="1" Grid.Column="1" Width="80" Height="80" FontSize="28" Margin="2,2,2,2" Click="btnSeven_Click"/>
        <Button Name="Eight" Content="8" Grid.Row="1" Grid.Column="2" Width="80" Height="80" FontSize="28" Margin="2,2,2,2" Click="btnEight_Click"/>
        <Button Name="Nine" Content="9" Grid.Row="1" Grid.Column="3" Width="80" Height="80" FontSize="28" Margin="2,2,2,2" Click="btnNine_Click"/>
        <Button Name="Divide" Content="/" Grid.Row="1" Grid.Column="4" Width="80" Height="80" FontSize="28" Margin="2,2,2,2" Click="btnDivide_Click"/>

        <Button Name="Four" Content="4" Grid.Row="2" Grid.Column="1" Width="80" Height="80" FontSize="28" Margin="2,2,2,2" Click="btnFour_Click"/>
        <Button Name="Five" Content="5" Grid.Row="2" Grid.Column="2" Width="80" Height="80" FontSize="28" Margin="2,2,2,2" Click="btnFive_Click"/>
        <Button Name="Six" Content="6" Grid.Row="2" Grid.Column="3" Width="80" Height="80" FontSize="28" Margin="2,2,2,2" Click="btnSix_Click"/>
        <Button Name="Plus" Content="*" Grid.Row="2" Grid.Column="4" Width="80" Height="80" FontSize="28" Margin="2,2,2,2" Click="btnPlus_Click"/>

        <Button Name="One" Content="1" Grid.Row="3" Grid.Column="1" Width="80" Height="80" FontSize="28" Margin="2,2,2,2" Click="btnOne_Click"/>
        <Button Name="Two" Content="2" Grid.Row="3" Grid.Column="2" Width="80" Height="80" FontSize="28" Margin="2,2,2,2" Click="btnTwo_Click"/>
        <Button Name="Three" Content="3" Grid.Row="3" Grid.Column="3" Width="80" Height="80" FontSize="28" Margin="2,2,2,2" Click="btnThree_Click"/>
        <Button Name="Minus" Content="-" Grid.Row="3" Grid.Column="4" Width="80" Height="80" FontSize="28" Margin="2,2,2,2" Click="btnMinus_Click"/>

        <Button Name="Dot" Content="." Grid.Row="4" Grid.Column="1" Width="80" Height="80" FontSize="28" Margin="2,2,2,2" Click="btnDot_Click"/>
        <Button Name="Zero" Content="0" Grid.Row="4" Grid.Column="2" Width="80" Height="80" FontSize="28" Margin="2,2,2,2" Click="btnZero_Click"/>
        <Button Name="Equal" Content="=" Grid.Row="4" Grid.Column="3" Width="80" Height="80" FontSize="28" Margin="2,2,2,2" Click="btnEqual_Click"/>
        <Button Name="Add" Content="+" Grid.Row="4" Grid.Column="4" Width="80" Height="80" FontSize="28" Margin="2,2,2,2" Click="btnAdd_Click"/>

        <TextBox Name="textMessage" Grid.Row="5" Grid.ColumnSpan="5" FontSize="36" Margin="0,10,0,0" TextAlignment="left" IsReadOnly="true"/>

    </Grid>
</Window>
